{
  "manifest_version": 3,
  "name": "ValidKun - OpenAPI Validator",
  "version": "1.0.0",
  "description": "OpenAPI仕様書に基づいてネットワークトラフィックを自動検証するDevToolsパネル",
  "permissions": [
    "storage"
  ],
  "devtools_page": "devtools.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
