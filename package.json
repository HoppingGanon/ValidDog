{
  "name": "valid-dog",
  "version": "1.0.0",
  "description": "ValidDog - OpenAPI Validator Application",
  "type": "module",
  "main": "dist/bundle.js",
  "scripts": {
    "build": "rollup -c",
    "build:chrome": "rollup -c rollup.config.chrome.js",
    "dev": "rollup -c -w",
    "dev:chrome": "rollup -c rollup.config.chrome.js -w",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "rebuild:chrome": "npm run clean && npm run build:chrome",
    "preview": "serve -l 8080",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "openapi",
    "validator"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/chrome": "^0.0.254",
    "@types/js-yaml": "^4.0.9",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "rollup": "^4.6.1",
    "serve": "^14.2.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "openapi-client-axios": "^7.5.4",
    "openapi-request-validator": "^12.1.3",
    "openapi-response-validator": "^12.1.3"
  }
}
