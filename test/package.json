{
  "name": "validkun-test-server",
  "version": "1.0.0",
  "description": "OpenAPI仕様書に基づいたテスト用バックエンドサーバー",
  "main": "backend-server.js",
  "scripts": {
    "start": "node backend-server.js",
    "miss": "node backend-server-miss.js",
    "test": "node api-test.mjs --all",
    "test:users": "node api-test.mjs --users",
    "test:posts": "node api-test.mjs --posts",
    "test:errors": "node api-test.mjs --errors",
    "lint:openapi": "spectral lint openapi.yaml",
    "serve": "serve .",
    "format": "prettier --write \"**/*.{js,mjs,html}\"",
    "format:check": "prettier --check \"**/*.{js,mjs,html}\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@stoplight/spectral-cli": "^6.11.0",
    "prettier": "^3.7.4",
    "serve": "^14.2.5"
  }
}
